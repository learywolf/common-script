def process_files(input_file, output_file):
    # 读取输入文件并处理内容
    with open(input_file, 'r', encoding='utf-8') as file:
        lines = file.readlines()

    result_lines = []
    i = 0
    while i < len(lines):
        line = lines[i].strip()

        # 判断当前行是否是纯数字
        if line.isdigit():
            result_lines.append(line)  # 数字行单独添加
            # 检查下一行是否为空行，如果是则跳过
            if i + 1 < len(lines) and lines[i + 1].strip() == "":
                i += 1  # 跳过空行
        else:
            result_lines.append(lines[i].strip())  # 保持非数字行原样
        i += 1

    # 处理后内容按块输出，块之间用 "||" 连接
    t = ""
    output_lines = []
    for line in result_lines:
        if line == "":
            if t:
                output_lines.append(t + '\n')  # 输出当前块
                print(t)  # 同时打印当前块
            t = ""  # Reset after printing
        else:
            if t:
                t += "||"  # Add separator between lines
            t += line

    if t:  # Print the last collected block if any
        output_lines.append(t + '\n')
        print(t)  # 同时打印最后的块

    # 将处理后的内容写入输出文件
    with open(output_file, 'w', encoding='utf-8') as output:
        output.writelines(output_lines)


# 调用函数，处理 input.txt 并将结果输出到 output.txt，同时打印
process_files('input.txt', 'output.txt')
